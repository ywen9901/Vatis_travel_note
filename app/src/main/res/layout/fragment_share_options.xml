<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShareOptionsFragment"
    android:background="@drawable/background_blur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:padding="16sp"
            android:background="@null">
            <ImageButton
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:background="@null"/>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/share_ig_text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:paddingVertical="10sp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="130sp"
            android:text="分享到 Instagram 限時動態"
            android:textAlignment="center"
            android:elevation="4sp"
            android:textColor="@color/themeWhite"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/share_journal_text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="10sp"
            android:elevation="4sp"
            android:layout_below="@id/share_ig_text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="40sp"
            android:text="以手帳型式儲存"
            android:textAlignment="center"
            android:textColor="@color/themeWhite"
            android:textSize="22sp" />

    </LinearLayout>
</FrameLayout>